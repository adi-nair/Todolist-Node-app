<%- include('header'); -%>
<div class="box" id="heading">
  <h1>Its <%=listTitle%> </h1>
</div>
<div class="box">

  <% listItem.forEach(function(stuff){  %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name = "checkbox" value = <%=stuff._id %> onChange="this.form.submit()">
      <p> <%= stuff.name  %> </p>
    </div>
    <input type="hidden" name="nameList" value="<%=listTitle%>">
  </form>
  <% }); %>

  <form class="item" action="/" method="post" autocomplete="off">
    <input type="text" name="nextItem" placeholder="Add Item">
    <button type="submit" name="itemName" value=<%=listTitle%>>+</button>
  </form>
</div>
<%- include('footer'); -%>

